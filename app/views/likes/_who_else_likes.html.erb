<% 
  song_likes = Like.all.where(song_id: a_track_id)
  leader_ids = current_user.leaders.pluck(:recipient_id)
  leader_ids = leader_ids.push(current_user.id)
  leader_likes = song_likes.where(fan_id: leader_ids).order(created_at: "asc")              
%>
<% if leader_likes.count == 1 %>
  <small>You like this</small>
<% elsif leader_likes.first.fan == current_user %>
  <small>
    You and <%= leader_likes.count - 1 %> more like this
  </small>
<% else %>
  <small>
    <%= leader_likes.first.fan.first_name %> and
    <%= leader_likes.count - 1 %> more like this
  </small>
<% end %>