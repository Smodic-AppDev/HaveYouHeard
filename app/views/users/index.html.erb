<div class="row mb-2">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">
          People you follow:
        </h3>
      </div>
      <% if @followed_users.count == 0 %>
        <ul class="list-group">
          <li class="list-group-item">
            You're not following anyone yet.
          </li>
        </ul>
      <% else %>
        <ul class="list-group">
          <% @followed_users.each do |a_followed_user| %>
            <li class="list-group-item d-flex justify-content-between">
              <div class="col">
                <%= link_to user_path(a_followed_user.username) do %>
                  <%= a_followed_user.first_name + " " + a_followed_user.last_name + " (" + a_followed_user.username + ")" %>
                <% end %>
              </div>
              <div class="col">
                <%= render "follow_requests/follow_unfollow", recipient: a_followed_user %>
              </div>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
<div class="row mb-2">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">
          Everyone else:
        </h3>
      </div>
      <% if @non_followed_users.count == 0 %>
        <ul class="list-group">
