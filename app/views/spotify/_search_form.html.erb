<%= form_with(url: search_results_path, method: :get) do %>

  <div class="form-group">
    
    <%= label_tag :song_box, "Enter the name of the song below." %>            

    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text">
          <i class="fas fa-search"></i>
        </span>
      </div>

      <%= text_field_tag :query_song_name, "", {placeholder: "Example: Let It Be", id: "song_box", class: "form-control"}  %>
      
    </div>
  </div>

  <button class="btn btn-primary btn-block">
    Find Song
  </button>

<% end %>